<h1>Editing question</h1>

<%= form_for @question do |f| %>
  <% if @question.errors.any? %>
    <div class="error_messages">
      <h2>Fehler bei der Erstellung</h2>
      <ul>
	<% for message in @question.errors.full_messages %>
	  <li><%= message %></li>
	<% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :question %><br>
    <%= f.text_area :question %>
  </div>
  <div class="field">
    <%= f.label :answer0 %><br>
    <%= f.text_field :answer0 %>
    <%= f.radio_button :correctAnswer, 0 %>
  </div>
  <div class="field">
    <%= f.label :answer1 %><br>
    <%= f.text_field :answer1 %>
    <%= f.radio_button :correctAnswer, 1 %>
  </div>
  <div class="field">
    <%= f.label :answer2 %><br>
    <%= f.text_field :answer2 %>
    <%= f.radio_button :correctAnswer, 2 %>
  </div>
  <div class="field">
    <%= f.label :answer3 %><br>
    <%= f.text_field :answer3 %>
    <%= f.radio_button :correctAnswer, 3 %>
  </div>
  <div class="field">
    <%= f.label :difficulty %><br>
    <%= f.number_field :difficulty, {min:1, max:10, step:1} %>
  </div>
  <div class="actions"><%= f.submit "Frage bearbeiten" %></div>
<% end %>

<%= link_to 'Show', @question %> |
<%= link_to 'Back', questions_path %>
